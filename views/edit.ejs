<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Message</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <h1>Edit Message</h1>

    <form method="POST">
      <label for="messageUser">Name</label>
      <input id="messageUser" name="messageUser" value="<%= message.user %>" required>

      <label for="messageText">Message</label>
      <input id="messageText" name="messageText" value="<%= message.text %>" required>

      <button type="submit">Save</button>
    </form>

    <a class="nav-link" href="/">Cancel</a>
  </div>
</body>
</html>
